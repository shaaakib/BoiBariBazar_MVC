@model Category

<form method="post">
    <div class="row pb-2">
        <h2 class="text-primary">Create Category</h2>
        <hr />
    </div>
    <div class="container">
        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Category Name">
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="DisplayOrder"></label>
            <input type="text" class="form-control" asp-for="DisplayOrder" placeholder="Enter Display Order">
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>