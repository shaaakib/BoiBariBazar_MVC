@model List<Category>

<h1>Category List</h1>

<table class="table table-bordered table-striped mt-5">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>CreatedAt</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>@category.CreatedAt.ToString("yyyy-MM-dd")</td>
            </tr>
        }
</table>